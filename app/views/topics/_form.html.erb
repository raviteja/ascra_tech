<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :forum_id %><br />
    <%= f.collection_select :forum_id, Forum.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :topic_name %><br />
    <%= f.text_field :topic_name %>
  </div>
  <div class="field">
    <%= f.label :topic_content %><br />
    <%= f.text_area :topic_content, :rows => 12 %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "tags"%><br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
